doctype html
html
  head
    meta(charset='utf-8')
    title Products
    link(rel='stylesheet' href='/stylesheets/shop.css')
    //link(rel='stylesheet' href='/stylesheets/global.css')
  body
    header
      .container
        h1 Logo
        nav
          ul
            li
              a(href='#') Home
            li
              a(href='#') Products
            li
              a(href='#') Contact
            li
              a(href='#') About
        button.nav-toggle
          span
          span
          span
    //section.hero
      .container
        h1 Products
    main
      .container
        .search
          form(action='/products' method='get')
            input(type='text' name='search' placeholder='Search...')
            button(type='submit') Search
        .product-list
          each product in Products
            .product-card
              img.image(src=product.image, alt = 'productImage')
              h2= product.name
              p.description= product.description
              p.price Ksh. #{product.price}
              button.add-to-cart Add to Cart
    footer
      .container
        p Copyright © 2023

